@import 'nib'
@import 'custom/reset'

x-reset()

/*
  Custom
*/
@font-face{
    font-family: 'cgtn';
    src: url('fonts/font-name.eot');
    src: url('fonts/font-name.eot?#iefix') format('embedded-opentype'),
        url('fonts/font-name.woff2') format('woff2'),
        url('fonts/font-name.woff') format('woff'),
        url('fonts/font-name.ttf') format('truetype'),
        url('fonts/font-name.svg') format('svg');
    font-weight: normal;
    font-style: normal;
}

.btn
    cursor pointer

// Intro page
.intro-page
    position relative
    width 100vw
    height 100vh
    display flex
    overflow hidden

    .desc
        width 40%
        position relative

        .txt-wrap
            position absolute
            left 50%
            top 50%
            transform: translate(-40%, -50%)
            width 400px

            h1
                color #9B9B9B
                font-size: 6.4rem

            p
                color #9B9B9B
                font-size: 2rem
                line-height: 1.2em
                margin 1em 0

            .my-works.btn
                width 50%
                margin-top 1em

    .media
        width 60%
        background-image: url(../images/back_img.png)
        background-repeat: no-repeat
        background-size: cover
        background-position: center
        display: flex
        justify-content: flex-end

        .parallax-box
            position relative
            width 65%

        .color-photo
            height 100%
            width 100%
            background-image: url(../images/front_img.png)
            background-repeat: no-repeat
            background-size: cover
            background-position: center

        .play-video.btn
            position absolute
            left 0
            top 50%
            transform: translate(-50%, -50%)
            height 8%

.yt-video-box
    position fixed
    left 0
    top 100%
    width 100%
    height 100%
    z-index 3000
    opacity 0
    background-color: rgba(0,0,0,.9)
    transform: translateY(30px)
    transition: opacity .3s, transform .3s
    display flex
    align-items: center
    justify-content: center
    background-image: url(../images/ring-loader.gif)
    background-size: 30px
    background-repeat: no-repeat
    background-position: center

    &.show
        top 0
        opacity 1
        transform: translateY(0)

    iframe
        width 800px
        height 450px

    .close-intro-video
        position absolute
        top 50px
        right 80px
        width 30px
        cursor pointer
        transition: transform .3s

        &:hover
            transform: rotate(90deg)

/* Header */
.pin-wrapper
    position relative
    height 80px

    header
        position relative
        height 80px
        width 100%
        color #fff
        background-color #424544
        font-size: 2.2rem
        z-index: 1000

        &.pinned
            position fixed
            left 0
            top 0

        .home
            float left
            display: flex
            align-items center
            height 100%
            margin-left 2em

        ul
            max-width: 1280px
            margin: 0 auto
            clearfix()
            float right
            display inline-flex
            align-items: center
            height 100%

            li
                margin-right 4em
                cursor pointer

/* Projects */
.projects-show
    box-shadow: 0px 8px 16px #222;
    position: relative;

    .sub-page-wrapper
        position fixed
        left 0
        top 100%
        width 100%
        height 100%
        z-index: 9999
        background-color: rgba(255,255,255,1)
        opacity 0
        transform: translateY(30px)
        transition: opacity .3s, transform .3s

        &.show
            top 0
            opacity 1
            transform: translateY(0)

        .close-sub-page
            position absolute
            right 4%
            top 45px
            width 30px
            cursor pointer
            transition: transform .3s

            &:hover
                transform: rotate(90deg)

        .content
            max-width 1080px
            height 100%
            margin 0 auto
            padding 52px 80px
            overflow-x hidden
            overflow-y: scroll

            h1
                font-size: 3rem
                font-weight: bold
                margin 15px 0
                color #4A4A4A

                &.title
                    font-size: 4.2rem
                    margin-bottom 15px
                    text-align center

            h2
                font-size: 2.4rem
                font-weight: bold
                margin 20px 0
                color #4A4A4A

            h3
                font-size: 2.4rem
                font-weight: bold
                margin 15px 0
                color #A9A9A9
            
            h6.desc
                font-size: 1.8rem
                text-align center
                color #9B9B9B
                margin-bottom 32px

            hr
                border-top 2px dashed #9B9B9B
                margin 30px 0

            p
                font-size: 1.8rem
                color: #A9A9A9
                line-height 1.4em
                margin 18px 0

                em
                    font-weight: bold

            img
                display block
                margin 15px 0
                width 100%

            .video-wrap
                position relative
                padding-top 56.25%
                margin 15px 0
                background-image: url(../images/ring-loader.gif)
                background-size: 30px
                background-repeat: no-repeat
                background-position: center

                iframe
                    position absolute
                    left 0
                    top 0


.project
    position relative
    height 300px
    overflow hidden
    cursor pointer

    .inner-box
        position absolute
        top 50%
        transform: translateY(-50%)
        width 36%

    h1
        font-size: 3.2rem
        line-height: 1.2em

    h3
        font-size: 2.6rem
        line-height 1.2em

    p
        margin-top 1em
        font-size: 1.8rem
        line-height 1.2em

    .bg-img
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        background-size: cover
        background-repeat: no-repeat
        background-position: center
        opacity 0

    &.no-1
        .bg-img
            background-image: url(../images/project_Lavendern.png)

    &.no-3
        .bg-img
            background-image: url(../images/project_Babies.png)

    &.no-4
        .bg-img
            background-image: url(../images/project_TheFinalPiece.png)

    h1, h3, p
        transition: all .5s

    .bg-img
        transition all 1s
            
    &.align-left:hover
        h1, h3, p
            opacity 0
            transform: translateX(-30px)

    &.align-right:hover
        h1, h3, p
            opacity 0
            transform: translateX(30px)

    &:hover
        .bg-img
            opacity 1

    &.light
        background-color: #eee

        h1, p
            color #4A4A4A

        h3
            color: #9B9B9B

    &.dark
        background-color: #9B9B9B

        h1, p
            color #fff

        h3
            color: #D6D6D6

    &.align-left
        .inner-box
            left: 6%

            > *
                text-align: left

    &.align-right
        .inner-box
            right 6%

            > *
                text-align: right

/* Games */
.games-show
    height 600px
    background-color: #606060
    display: flex
    flex-direction: column

    h1
        text-align: center
        font-weight: bold
        font-size: 3.4rem
        color #F5A623
        padding-top 1.6em

    .game-box
        flex auto
        display: flex
        justify-content center
        align-items: center

        .game
            width 30%
            text-align: center
            padding 0 1em

            img 
                width 100%
                max-width: 275px

            h3
                text-align: center
                color #EFEFEF
                font-size: 3.2rem
                font-weight: bold
                margin-top 1em

/* Art Works */
.art-works-show

    h1
        text-align: center
        font-weight: bold
        font-size: 3.4rem
        color #F5A623
        padding-top 2.4em

    .art-box
        width 80%
        margin: 0 auto
        display: flex
        flex-wrap wrap
        padding-top 2em

        > .item
            position relative
            width 25%
            padding-top 25%

            .inner
                position absolute
                width 86%
                height 86%
                left 7%
                top 7%
                background-color: #D8D8D8
                background-position: center 
                background-repeat: no-repeat
                background-size: cover

                .desc
                    position absolute
                    width 100%
                    height 100%
                    left 0
                    top 0
                    background-color: rgba(0,0,0,.5)
                    opacity 0
                    transition: all .3s

                    &:hover
                        opacity 1

                    .wrap
                        position absolute
                        left 50%
                        top 50%
                        transform: translate(-50%, -50%)
                        text-align: center
                        width 80%
                        cursor pointer

                        .title
                            color #ffffff
                            font-size: 2.2rem

                        .meta
                            color: #dddddd
                            font-size: 1.4rem
                            line-height 1.4em
                            margin-top 1em
                            padding 0 2em

                        .date
                            color: #ffffff
                            font-size: 1.4rem
                            margin-top 20%

            .art1
                background-image: url(../images/art1.png)

            .art2
                background-image: url(../images/art2.png)

            .art3
                background-image: url(../images/art3.png)

            .art4
                background-image: url(../images/art4.png)

            .art5
                background-image: url(../images/art5.png)

/* About Me */
.about-me
    max-width 760px
    margin 0 auto
    padding 0 2em

    h1
        text-align: center
        font-weight: bold
        font-size: 3.4rem
        color #F5A623
        padding-top 2.4em

    .portrait
        margin 2em 0
        height 300px
        background-color: #D8D8D8

    p
        color #9B9B9B
        font-size: 1.8rem
        margin 1em 0
        line-height 1.4em

    .contact-me
        padding 2em

        a
            color #F5A623
            font-weight: bold

/* Footer */
footer
    margin-top 60px

    .follow-txt
        font-size 16px
        color #838487
        text-align center

    .follow-icons
        margin-top 30px
        text-align center
        position relative
        z-index 10
        line-height 40px

    .copy-right
        margin-top 50px
        padding-top 2.4em
        height 80px
        font-size 1.6rem
        text-align center
        line-height 1.4em
        color #fff
        background-color #9B9B9B

/* Responsive */
@media screen and (max-width: 1100px)
    .page3 .page3-footer .data-source
        text-align left


/* 
  Tool 
*/
.transition
    transition opacity .5s, width .5s, height .5s, margin .5s

.transition-1
    transition opacity 1s

.hide
    opacity 0

.none
    display none
