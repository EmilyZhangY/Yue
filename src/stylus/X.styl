@import 'nib'
@import 'custom/reset'

x-reset()

/*
  Custom
*/
@font-face{
    font-family: 'cgtn';
    src: url('fonts/font-name.eot');
    src: url('fonts/font-name.eot?#iefix') format('embedded-opentype'),
        url('fonts/font-name.woff2') format('woff2'),
        url('fonts/font-name.woff') format('woff'),
        url('fonts/font-name.ttf') format('truetype'),
        url('fonts/font-name.svg') format('svg');
    font-weight: normal;
    font-style: normal;
}

// Intro page
.intro-page
    position relative
    width 100vw
    height 100vh
    display flex

    .desc
        width 40%
        position relative

        .txt-wrap
            position absolute
            left 50%
            top 50%
            transform: translate(-40%, -50%)
            width 400px

            h1
                color #9B9B9B
                font-size: 6.4rem

    .media
        width 60%
        background-image: url(../images/back_img.png)
        background-repeat: no-repeat
        background-size: cover
        display: flex
        justify-content: flex-end

        .color-img
            position relative
            width 65%
            background-image: url(../images/front_img.png)
            background-repeat: no-repeat
            background-size: cover

            .play-btn
                position absolute
                left 0
                top 50%
                transform: translate(-50%, -50%)
                height 8%
            

/* Header */
header
    position relative
    height 60px
    background-color #000

/* Content */
.content
    position relative
    width 100%
    height 100%
    overflow hidden


/* Footer */
footer
    margin-top 60px

    .follow-txt
        font-size 16px
        color #838487
        text-align center

    .follow-icons
        margin-top 30px
        text-align center
        position relative
        z-index 10
        line-height 40px

    .copy-right
        margin-top 50px
        padding-top 1em
        height 80px
        font-size 12px
        text-align center
        line-height 1.4em
        color #606060
        background-color #202020


/* Responsive */
@media screen and (max-width: 1100px)
    .page3 .page3-footer .data-source
        text-align left


/* 
  Tool 
*/
.transition
    transition opacity .5s, width .5s, height .5s, margin .5s

.transition-1
    transition opacity 1s

.hide
    opacity 0

.none
    display none
