@import 'nib'
@import 'custom/reset'

x-reset()

/*
  Custom
*/
@font-face{
    font-family: 'cgtn';
    src: url('fonts/font-name.eot');
    src: url('fonts/font-name.eot?#iefix') format('embedded-opentype'),
        url('fonts/font-name.woff2') format('woff2'),
        url('fonts/font-name.woff') format('woff'),
        url('fonts/font-name.ttf') format('truetype'),
        url('fonts/font-name.svg') format('svg');
    font-weight: normal;
    font-style: normal;
}

.btn
    cursor pointer

// Intro page
.intro-page
    position relative
    width 100vw
    height 100vh
    display flex

    .desc
        width 40%
        position relative

        .txt-wrap
            position absolute
            left 50%
            top 50%
            transform: translate(-40%, -50%)
            width 400px

            h1
                color #9B9B9B
                font-size: 6.4rem

            p
                color #9B9B9B
                font-size: 2rem
                line-height: 1.2em
                margin 1em 0

            .my-works.btn
                width 50%
                margin-top 1em

    .media
        width 60%
        background-image: url(../images/back_img.png)
        background-repeat: no-repeat
        background-size: cover
        background-position: center
        display: flex
        justify-content: flex-end

        .color-img
            position relative
            width 65%
            background-image: url(../images/front_img.png)
            background-repeat: no-repeat
            background-size: cover
            background-position: center

            .play-video.btn
                position absolute
                left 0
                top 50%
                transform: translate(-50%, -50%)
                height 8%
            

/* Header */
header
    position relative
    height 80px
    color #fff
    background-color #424544
    font-size: 2.2rem

    .home
        float left
        display: flex
        align-items center
        height 100%
        margin-left 2em

    ul
        max-width: 1280px
        margin: 0 auto
        clearfix()
        float right
        display inline-flex
        align-items: center
        height 100%

        li
            margin-right 4em

/* Projects */
.projects
    box-shadow: 0px 8px 16px #222;
    z-index: 10;
    position: relative;

.project
    position relative
    height 300px
    overflow hidden
    background-size: cover
    background-repeat: no-repeat
    background-position: center

    .inner-box
        position absolute
        top 50%
        transform: translateY(-50%)
        width 36%

    h1
        font-size: 3.2rem
        line-height: 1.2em

    h3
        font-size: 2.6rem
        line-height 1.2em

    p
        margin-top 1em
        font-size: 1.8rem
        line-height 1.2em

    // &.no-1
    //     background-image: url(../images/project_1.png)

    &.light
        background-color: #eee

        h1, p
            color #4A4A4A

        h3
            color: #9B9B9B

    &.dark
        background-color: #9B9B9B

        h1, p
            color #fff

        h3
            color: #D6D6D6

    &.align-left
        .inner-box
            left: 6%

            > *
                text-align: left

    &.align-right
        .inner-box
            right 6%

            > *
                text-align: right

/* Games */
.games-show-case
    height 600px
    background-color: #606060
    display: flex
    flex-direction: column

    h1
        text-align: center
        font-weight: bold
        font-size: 3.4rem
        color #F5A623
        padding-top 1.6em

    .game-box
        flex auto
        display: flex
        justify-content center
        align-items: center

        .game
            width 30%
            text-align: center
            padding 0 1em

            img 
                width 100%
                max-width: 275px

            h3
                text-align: center
                color #EFEFEF
                font-size: 3.2rem
                font-weight: bold
                margin-top 1em

/* Art Works */
.art-works

    h1
        text-align: center
        font-weight: bold
        font-size: 3.4rem
        color #F5A623
        padding-top 2.4em

    .art-box
        width 80%
        margin: 0 auto
        display: flex
        flex-wrap wrap
        padding-top 2em

        > .item
            position relative
            width 25%
            padding-top 25%

            .inner
                position absolute
                width 86%
                height 86%
                left 7%
                top 7%
                background-color: #D8D8D8
                background-position: center 
                background-repeat: no-repeat
                background-size: cover

                .desc
                    position absolute
                    width 100%
                    height 100%
                    left 0
                    top 0
                    background-color: rgba(0,0,0,.5)

                    .wrap
                        position absolute
                        left 50%
                        top 50%
                        transform: translate(-50%, -50%)
                        text-align: center
                        width 80%

                        .title
                            color #ffffff
                            font-size: 2.2rem

                        .meta
                            color: #dddddd
                            font-size: 1.4rem
                            line-height 1.4em
                            margin-top 1em
                            padding 0 2em

                        .date
                            color: #ffffff
                            font-size: 1.4rem
                            margin-top 5em

            .art1
                background-image: url(../images/arts_1.png)

            .art2
                background-image: url(../images/arts_2.png)

            .art3
                background-image: url(../images/arts_3.png)

            .art4
                background-image: url(../images/arts_4.png)

/* About Me */
.about-me
    width 60%
    margin 0 auto
    padding 0 2em

    h1
        text-align: center
        font-weight: bold
        font-size: 3.4rem
        color #F5A623
        padding-top 2.4em

    .portrait
        margin 2em 0
        height 300px
        background-color: #D8D8D8

    p
        color #9B9B9B
        font-size: 1.8rem
        margin 1em 0
        line-height 1.2em

    .contact-me
        padding 2em

        a
            color #F5A623
            font-weight: bold

/* Footer */
footer
    margin-top 60px

    .follow-txt
        font-size 16px
        color #838487
        text-align center

    .follow-icons
        margin-top 30px
        text-align center
        position relative
        z-index 10
        line-height 40px

    .copy-right
        margin-top 50px
        padding-top 2.4em
        height 80px
        font-size 1.6rem
        text-align center
        line-height 1.4em
        color #fff
        background-color #9B9B9B


/* Responsive */
@media screen and (max-width: 1100px)
    .page3 .page3-footer .data-source
        text-align left


/* 
  Tool 
*/
.transition
    transition opacity .5s, width .5s, height .5s, margin .5s

.transition-1
    transition opacity 1s

.hide
    opacity 0

.none
    display none
